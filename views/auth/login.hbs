    <div class="login">
        <h2 class="sign-text">Login</h2>
        <form action="/auth/login" method="POST">
            <div class="username form-group">
                <label for="username" name="username">User Name</label>
                <input id="username" class="form-control" type="text" name="username" autofocus required>
            </div>
            <div class="pass form-group">
                <label for="password">Password</label>
                <input id="password" class="form-control" type="password" name="password" required>
            </div>
            {{#if message }}
            <div class="error-message">{{ message }}</div>
            {{/if}}
            <div class="container-btn-signup">
                <button class="btn-signup">Get In</button>
            </div>
        </form>
        <div class="advise-login">
            <p class="account-message">
                <a href="/auth/signup">Create new account</a>
            </p>
        </div>
    </div>
</div>
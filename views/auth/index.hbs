<div class="container-profile">
    <div>
        <img class="profile" src="{{user.imgPath}}" alt="{{imgName}}">
    </div>
    <div class="data-container">
        <h2>{{user.name}}</h2>
        <h4>Username: {{user.username}}</h4>
    </div>
</div>
<br><br>

<!-- Icon Cards-->

<body>

  {{#empty user }}

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-own">
    <a class="navbar-brand link-without" href="#">BookApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/signup">SignUp</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/login">Login</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Graphics
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="./chart">Books Chart</a>
            <a class="dropdown-item" href="#">Another action</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </li>
      </ul>
    </div>
  </nav>
  {{else}}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-own">
    <a class="navbar-brand link-without" href="#">BookApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active welcome-nav">
          <a class="nav-link" href="/auth/index">Welcome {{user.name}} <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item sep">
          <a class="nav-link" href="/auth/profile">Profile</a>
        </li>
        <li class="nav-item sep">
          <a class="nav-link" href="/auth/all-users">All Users</a>
        </li>
        <li class="nav-item dropdown sep">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Graphics
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </li>
        <div class="logout">
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        </div>
      </ul>
    </div>
  </nav>
  {{/empty}}

  <div class="adapt-content">
    {{{body}}}
  </div>

  <div class="footer">
    <img src="/images/footer2.png" class="footer-pict" alt="logo">
  </div>
